<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit" x:Class="MSPAccounting.Views.CreateAppointment"
        Title="CreateAppointment" Height="300" Width="550">
    <Grid HorizontalAlignment="Stretch" >
        <xctk:DateTimePicker x:Name="dtpDate" HorizontalAlignment="Left" Margin="50,16,0,0" VerticalAlignment="Top" Width="157" RenderTransformOrigin="0.875,0.35"/>
        <Label Content="Date" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="2.5,3.846"/>
        <Label Content="Location" HorizontalAlignment="Left" Margin="10,41,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.184,-0.808"/>
        <Label Content="Client" HorizontalAlignment="Left" Margin="10,72,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.184,-0.808"/>
        <ComboBox HorizontalAlignment="Left" Margin="55,76,0,0" VerticalAlignment="Top" Width="152"/>
        <TextBox x:Name="txtbxLocation" HorizontalAlignment="Left" Height="23" Margin="65,44,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="142" RenderTransformOrigin="0.292,0.087"/>
        <Button x:Name="btnCreate" Content="Create" HorizontalAlignment="Center" VerticalAlignment="Center"  Click="btnCreate_Click" RenderTransformOrigin="0.725,-4.864"/>
    </Grid>
</Window>
